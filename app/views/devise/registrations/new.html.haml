- provide(:title, t('registrations.new.title'))

.row.main-row
  .col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1
    %h2= t('registrations.new.title')
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      = f.input :name, required: true, autofocus: true
      = f.input :lastname, required: true
      = f.input :document_type, required: true, collection: User::DOCUMENT_TYPES
      = f.input :document, required: true
      = f.input :email, required: true
      = f.input :password, required: true, hint: (t('registrations.new.password_hint', minimum_password_length: @minimum_password_length) if @minimum_password_length)
      = f.input :password_confirmation, required: true
      = f.button :submit, t('registrations.new.submit'), class: "btn btn-primary"
    = render "devise/shared/links"
