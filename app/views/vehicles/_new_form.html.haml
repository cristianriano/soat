= simple_form_for(@vehicle, url: vehicles_path, remote: true, html: { method: :post, id: 'new_vehicle' }) do |f|
  = f.error_notification
  = f.input :license, as: :hidden, input_html: {id: 'vehicle_license_hidden'}
  = f.input :category, collection: Vehicle::CATEGORIES, include_blank: false
  = f.input :subcategory, collection: @subcategories
  = f.input :age, hint: t('vehicles.new.age_hint'), as: :integer, input_html: { min: '0', step: 'any' }
  = f.input :value_type, as: :hidden, value: ""
  = f.input :value, as: :integer, input_html: { min: '0', step: 'any' }
  = f.button :submit, t('vehicles.new.submit'), class: "btn btn-primary"
